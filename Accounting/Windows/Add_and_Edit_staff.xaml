<Window x:Class="Accounting.Windows.Add_and_Edit_staff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting.Windows"
        mc:Ignorable="d"
        Title="Редактирование записи - Сотрудники" Height="250" Width="500" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Icon="/PNG/icon-technician.png">
    <Border BorderBrush="Black" BorderThickness="0.5" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="ФИО" Margin="5,2" Height="22"/>
                <TextBox x:Name="txbFIO" Margin="5,2" Height="22"/>
                <TextBlock Text="Имя учетной записи" Margin="5,2" Height="22"/>
                <TextBox x:Name="txbAccount_name" Margin="5,2" Height="22"/>
                <TextBlock Text="Пароль" Margin="5,2" Height="22"/>
                <TextBox x:Name="txbPassword" Margin="5,2" Height="22"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Телефон" Margin="5,2" Height="22"/>
                <TextBox x:Name="txbTelephone" Margin="5,2" Height="22"/>
                <TextBlock Text="Email" Margin="5,2" Height="22"/>
                <TextBox x:Name="txbEmail" Margin="5,2" Height="22"/>
                <TextBlock Text="Дата создания аккаунта" Margin="5,2" Height="22"/>
                <DatePicker x:Name="txbCreation_date" Margin="5,2" Height="22"/>
            </StackPanel>
            <Button Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Width="75" Height="25" Content="ОК" Click="OK"/>
        </Grid>
    </Border>
</Window>
